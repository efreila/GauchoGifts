<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_giftexchange"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs48.g12.gauchogifts.giftexchange">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:id="@+id/geTitle"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="Deadline"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/geDeadline"
            android:layout_marginStart="16dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/geTitle"
            android:layout_marginTop="32dp" />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/geDescripton"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/geDeadline" />

        <Button
            android:text="Join Gift Exchange"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/joinBtn"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/geDescripton" />
    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
