<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab4_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs48.g12.gauchogifts.navheader$PlaceholderFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_input_add"
                android:padding="100dip"
                android:id="@+id/userImage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="32dp" />

            <TextView
                android:text="Add Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:id="@+id/addPhoto" />

            <TextView
                android:layout_width="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/profile_firstName"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ProfPic"
                app:layout_constraintRight_toRightOf="@+id/userImage"
                android:layout_height="wrap_content"
                android:hint="First Name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastName"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_firstName"
                app:layout_constraintLeft_toLeftOf="@+id/userImage"
                android:layout_marginBottom="20dp"
                android:hint="Last Name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Credits:"
                android:textSize="20dp"
                android:ems="10"
                android:id="@+id/credDisplay" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Credits:"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:ems="10"
                android:id="@+id/credits" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Address:"
                android:textSize="20dp"
                android:ems="10"
                android:id="@+id/address" />

            <TextView
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/street1"
                android:hint="Street"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/street2"
                android:layout_marginLeft="50dp"
                android:hint="Street" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/City"
                android:layout_marginLeft="50dp"
                android:hint="City" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/State"
                android:layout_marginLeft="50dp"
                android:hint="State" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/Zip"
                android:layout_marginLeft="50dp"
                android:hint="Zip" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/country"
                android:layout_marginLeft="50dp"
                android:hint="Country" />

            <TextView
                android:text="Interests:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/interests" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/interestInput" />

            <Button
                android:text="Done"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:onClick="doneClick"
                android:id="@+id/donebtn" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
