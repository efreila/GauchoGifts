<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs48.g12.gauchogifts.intro">

    <Button
        android:text="Log In"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/intro_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/intro_signup"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="Sign Up"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/intro_signup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/intro_info"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="Info"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/intro_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="85dp" />
</android.support.constraint.ConstraintLayout>
